<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tasty Tableau</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/206b7f0e4d.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
  <input type="checkbox" id="check">
  <label for="check">
    <i class="fas fa-bars" id="btn"></i>
    <i class="fas fa-times" id="cancel"></i>
  </label>
  <div class="sidebar">
    <header>Tasty Tableau</header>
    <a href="/" class="active">
      <i class="fa-light fa-house" style="color: #86e2ff;"></i>
      <span>Home</span>
    </a>
    <a href="/dashboard">
      <span>Dashboard</span>
    </a>
    {{#if logged_in}}
    <a href="#" id="logout">
      <span>Logout</span>
    </a>
    {{else}}
    <a href="/login">
      <span>Login</span>
    </a>
    {{/if}}
    <a href="/about">
      <span>About</span>
    </a>
    <a href="/team">
      <span>Meet the Team</span>
    </a>
  </div>
</body>

<div class="container m-auto col-8">
  {{{body}}}
</div>

{{#if logged_in}}
<script src="/js/logout.js"></script>
{{/if}}
</body>

</html>