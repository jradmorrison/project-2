<div class='card m-3 col-lg-3 col-sm-4'>
  <form action='api/recipes/edit/{{id}}' method='get'>
    <a href='/recipes/{{id}}'>
      <img src='{{image}}' class='card-img-top' alt='Preview image of the dish' />
      <div class='card-body'>
        <h6 class='card-title'>{{name}}</h6>
        <div class='d-flex justify-content-between'>
          <p>{{time_total}}</p>
        </div>
        <div class='d-flex justify-content-between'>
          <div class='d-flex gap-1'><i class='fa-solid fa-star checked'></i>{{rating}}</div>
          {{log @root.user_id}}
          {{#if (equal @root.user_id user_id)}}
            <button type='submit' id='Button-Edit-Recipe' class='btn btn-primary'>Edit</button>
          {{/if}}
        </div>
      </div>
    </a>
  </form>
</div>