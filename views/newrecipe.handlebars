<div class="d-flex flex-column col-md-6 col-xxl-4 mx-auto my-5 rounded-4 border border-dark">
    <div class="p-1">
        <h2 class="text-center">Submit a new recipe</h2>
    </div>
    <div class="p-4">
        <form id="login-form">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" id="name" placeholder="Chicken Parmesean" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" id="description"
                    placeholder="What a delicious classic Italian dish! Fried chicken breast served with red sauce and lots of melty cheese."
                    required />
            </div>
            <div class="mb-3">
                <label class="form-label">Time to make</label>
                <input type="text" class="form-control" id="time-total" placeholder="PT20M" />
            </div>
            <div class="mb-3">
                <label class="form-label">Category</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>Choose a cateogory</option>
                    {{#each categories as |category| }}
                    <option value="{{category.id}}">{{category.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary" id="recipe-submit">Submit</button>
            </div>

        </form>
    </div>

</div>