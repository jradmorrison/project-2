<div class="d-flex flex-column col-md-8 col-xxl-6 mx-auto my-5 rounded-4 border border-dark">
    <div class="p-1">
        <h2 class="text-center">Submit a new recipe</h2>
    </div>
    <div class="p-4">
        <form id="new-recipe">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" id="name" placeholder="Chicken Parmesean" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea class="form-control" id="description" cols="30" rows="2" placeholder="Fried chicken breast served with red sauce and lots of melty cheese."></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Time to make</label>
                <input type="text" class="form-control" id="time-total" placeholder="1H 30M" />
            </div>
            <div class="mb-3">
                <label class="form-label">Category</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>Choose a cateogory</option>
                    {{#each categories as |category| }}
                    <option value="{{category.id}}">{{category.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Instructions</label>
                <textarea class="form-control" id="instructions" cols="30" rows="5" placeholder="Please be as detailed as possible"></textarea>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary" id="recipe-submit">Submit</button>
            </div>

        </form>
    </div>

</div>